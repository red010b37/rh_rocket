    selector: '#jobDescription',
    menubar: false,
    statusbar: false,
    height: 400,
    plugins: "link lists",
    toolbar: "undo redo | bold italic | h1 h2 | bullist numlist | outdent indent | link | styleselect",
  });
  tinymce.init({
    selector: '#applyDescription',
    menubar: false,
    statusbar: false,
    height: 300,
    plugins: "link lists",
    toolbar: "undo redo | bold italic | h1 h2 | bullist numlist | outdent indent | link | styleselect",
  });

  $(function () {
    $("#location").selectize(
      {copyClassesToDropdown: false}
    );
  });

</script>


<style>
    .selectize-input {
        background: none;
        border: none;
        box-shadow: none;
    }

    .selectize-input.focus {
        box-shadow: none;
    }

    .selectize-dropdown .optgroup-header {
